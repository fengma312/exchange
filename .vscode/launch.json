{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Open",
            "program": "${workspaceFolder}/Com.Api/Com.Api.Open/bin/Debug/net6.0/Com.Api.Open.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Com.Api/Com.Api.Open",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Admin",
